<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <com.github.library.bubbleview.BubbleLinearLayout
        android:id="@+id/bubble_layout_in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:angle="4dp"
        app:arrowHeight="10dp"
        app:arrowLocation="bottom"
        app:arrowPosition="10dp"
        app:arrowWidth="8dp"
        app:bubbleColor="#0ddc96"

        >

        <TextView
            android:id="@+id/body_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:text="BubbleLinearLayout Text"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:padding="4dp"
            android:text="wed,12:30"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </com.github.library.bubbleview.BubbleLinearLayout>

</RelativeLayout>